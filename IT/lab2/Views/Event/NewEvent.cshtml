@model MVC_lab.Models.EventModel

@{
    ViewBag.Title = "NewEvent";
}

<h2>Add a new event</h2>

@using (Html.BeginForm("InsertNewEvent", "Event"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "Name field is required",  new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Location)
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Location, "Location must be between 5 and 30 characters", new { @class = "text-danger"})
        </div>

        <button type="submit" class="btn">Save</button>
    }

