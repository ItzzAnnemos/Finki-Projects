@model MVC_lab.Models.EventModel
@{
    ViewBag.Title = "EditEvent";
}

<h2>Edit Event - @Model.Name</h2>

@using (Html.BeginForm("EditEvent", "Event"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @disabled = "disabled" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "Name field is required", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Location, "Location must be between 5 and 30 characters", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn">Edit</button>
}